# PolySniper v1.0 â€” Environment Variables
# Copy this file to .env and fill in your values

# Polymarket (Polygon EVM wallet)
POLYMARKET_ADDRESS=0xYourPolygonWalletAddress
POLY_PRIVATE_KEY=your_private_key_here
POLYMARKET_HOST=https://clob.polymarket.com

# Telegram Alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Trading Parameters
MAX_BUY_PRICE=0.85
ORDER_SIZE_USDC=50.0
DRY_RUN=true

# Risk Management
MAX_OPEN_POSITIONS=10
MAX_POSITIONS_PER_GAME=4
MAX_SESSION_LOSS_USDC=200.0
MAX_TOTAL_EXPOSURE_USDC=500.0
MATCH_COOLDOWN_SECONDS=30.0

# Fees & Stop-Loss
FEE_RATE=0.02
STOP_LOSS_PCT=0.0

# Order Sizing (fixed, confidence, kelly)
SIZING_MODE=fixed
MIN_ORDER_USDC=10.0
MAX_ORDER_USDC=200.0
KELLY_FRACTION=0.25
KELLY_WIN_PROB=0.90

# Circuit Breaker
CB_FAILURE_THRESHOLD=3
CB_MIN_HEALTHY_ADAPTERS=1
CB_STALE_DATA_TIMEOUT=120.0

# Dashboard
DASHBOARD_PORT=8080

# Logging
LOG_DIR=logs
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
